<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    android:background="@drawable/notification_bg_terminal"
    android:orientation="vertical"
    android:paddingTop="2dp"
    android:paddingHorizontal="2dp">

    <ImageView
        android:id="@+id/notification_render"
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:scaleType="fitXY"
        tools:background="#80008000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical|end"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/notification_action_mute"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="monospace"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:text="[mute]"
            android:textSize="14sp"
            tools:textColor="#B3FFFFFF" />
        <TextView
            android:id="@+id/notification_action_stop_expanded"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="monospace"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:text="[stop]"
            android:textSize="14sp"
            tools:textColor="#B3FFFFFF" />
    </LinearLayout>
</LinearLayout>