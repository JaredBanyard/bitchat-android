<?xml version="1.0" encoding="utf-8"?>
<!--
    A ShapeDrawable for the notification background.
    This creates an efficient, theme-consistent "terminal window" effect with a dark
    background and a green border. Using a shape is more performant than a bitmap image.
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- The main background color of the terminal window -->
    <solid android:color="#FF111111" />

    <!-- A 1dp stroke creates the green border -->
    <stroke
        android:width="1dp"
        android:color="#FF39FF14" />

    <!-- Slightly rounded corners to soften the look -->
    <corners android:radius="4dp" />

</shape>
